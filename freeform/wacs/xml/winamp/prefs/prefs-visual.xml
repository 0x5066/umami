<groupdef id="Transparency.titlebox.content" autoheightsource="wasabi.slider.horizontal" w="370">
  <Wasabi:CheckBox x="0" y="0" text="Enabled"
  />
  <Wasabi:HSlider id="transparency.slider"
    x="0" y="16"
    w="0" h="15"
    relatw="1"
  />
</groupdef>

<groupdef id="Scaling.titlebox.content" autoheightsource="wasabi.slider.horizontal" w="370">
  <Wasabi:CheckBox x="0" y="0" text="Enabled"/>
  <Wasabi:HSlider id="scale.slider"
    x="0" y="16"
    w="0" h="15"
    relatw="1"
  />      
</groupdef>

<groupdef id="winamp.preferences.visual.content">
  <Wasabi:TitleBox x="3" y="3" title="Transparency" content="Transparency.titlebox.content" />
