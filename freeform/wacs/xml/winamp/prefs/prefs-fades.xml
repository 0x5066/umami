<groupdef id="default.fade.titlebox.content" autoheightsource="default.fade.slider">
  <Wasabi:CheckBox x="0" y="0" text="Enable Audio Fading" cfgattrib="{4D981DA3-F75D-431A-B617-46F3E45D2A1F};Use fades"/>
  <Wasabi:Text text="Fade Length" x="0" y="16" />
  <Wasabi:HSlider id="default.fade.slider"
    x="70" y="18" 
    w="-116" h="10"
    relatw="1"
    cfgattrib="{4D981DA3-F75D-431A-B617-46F3E45D2A1F};Default fade time (ms)"
    low="0"
    high="5000"
   />
  <Wasabi:Text id="default.fade.length" text="333ms" x="-40" relatx="1" y="16" />
  <script file="scripts/textslidercb.maki" param="default.fade.length;default.fade.slider;slider.button;;ms" /></groupdef>

