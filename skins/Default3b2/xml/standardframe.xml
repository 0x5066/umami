 <groupdef id="studio.standardframe" background="component.basetexture">

   <layer
     id="topleftcorner"
     x="0"
     y="0"
     image="component.top.left.corner"
     resize="topleft"
   />
   <layer
     id="toprightcorner"
     x="-2"
     relatx="1"
     y="0"
     image="component.top.right.corner"
     resize="topright"
   />
   <layer
     id="bottomleftcorner"
     x="0"
     y="-2"
     relaty="1"
     image="component.bottom.left.corner"
     resize="bottomleft"
   />
   <layer
     id="bottomrightcorner"
     x="-2"
     relatx="1"
     y="-2"
     relaty="1"
     image="component.bottom.right.corner"
     resize="bottomright"
   />
   <layer
     id="topstretch"
     x="2"
     y="0"
     w="-4"
     relatw="1"
     image="component.top.stretch"
     resize="top"
   />
   <layer
     id="leftstretch"
     x="0"
     y="2"
     h="-4"
     relath="1"
     image="component.left.stretch"
     resize="left"
   />
   <layer
     id="bottomstretch"
     x="2"
     y="-2"
     relaty="1"
     w="-4"
     relatw="1"
     image="component.bottom.stretch"
     resize="bottom"
   />
   <layer
     id="rightstretch"
     x="-2"
     relatx="1"
     y="2"
     h="-4"
     relath="1"
     image="component.right.stretch"
     resize="right"
   />
   <layer
     id="cornerresize"
     x="-14"
     relatx="1"
     y="-14"
     relaty="1"
     image="component.bottom.right.resize"
     resize="bottomright"
     scale="bottomright"
   />
   <layer
     id="innertopleftcorner"
     x="2"
     y="2"
     image="component.inner.top.left.corner"
   />
   <layer
     id="innertoprightcorner"
     x="-5"
     relatx="1"
     y="2"
     image="component.inner.top.right.corner"
   />
   <layer
     id="innerbottomleftcorner"
     x="2"
     y="-19"
     relaty="1"
     image="component.inner.bottom.left.corner"
   />
   <layer
     id="innerbottomrightcorner"
     x="-5"
     relatx="1"
     y="-19"
     relaty="1"
     image="component.inner.bottom.right.corner"
   />
   <layer
     id="innertopstretch"
     x="5"
     y="2"
     w="-10"
     relatw="1"
     image="component.inner.top.stretch"
   />
   <layer
     id="innerleftstretch"
     x="2"
     y="15"
     h="-34"
     relath="1"
     image="component.inner.left.stretch"
     resize="left"
   />
   <layer
     id="innerbottomstretch"
     x="5"
     y="-19"
     relaty="1"
     w="-10"
     relatw="1"
     image="component.inner.bottom.stretch"
   />
   <layer
     id="innerrightstretch"
     x="-5"
     relatx="1"
     y="15"
     h="-34"
     relath="1"
     image="component.inner.right.stretch"
     resize="right"
   />
    
   <button
      id="config"
      action="SYSMENU"
      x="5" y="3"
      image="component.sysmenu.unpressed"
      downImage="component.sysmenu.pressed"
      tooltip="Configure"
   />
   <button
      id="Close"
      action="CLOSE"
      x="-18" y="3"
      relatx="1"
      image="component.minimize.unpressed"
      downImage="component.minimize.pressed"
      tooltip="Close Window"
   />

   <titlebar
     id="titlebar"
     x="22"
     y="2"
     w="-43"
     relatw="1"
     h="11.5"
     title=":componentname"
   />

   <script id="standardframe.script" file="scripts/standardframe.maki" param="5,15,-10,-34,0,0,1,1" />

 </groupdef>
